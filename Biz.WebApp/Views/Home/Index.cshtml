@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SPAViews {
    <div id="Home" class="m-1">
        <div class="center row">
            @*ロゴの写真*@
            <div class="col-sm-8 col-md-8">
                <img src="~/Content/Home/home.jpg" class="displaySize">
            </div>

            @*サインイン部*@
            <div class="col-sm-4 col-md-4">
                <form class="form-signin" onsubmit="return false">
                    <h2 class="form-signin-heading">Please sign in</h2>

                    <label for="EmailInput">Email address</label>
                    <input class="form-control" id="EmailInput" placeholder="Email address" />

                    <label for="PasswordInput">Password</label>
                    <input class="form-control" id="PasswordInput" placeholder="Password" />

                    <div class="checkbox">
                        <label>
                            <input id="RememberMeCheckbox" />Remember me
                        </label>
                    </div>

                    <input type="button"
                           class="btn btn-lg btn-primary btn-block"
                           id="SignInButton"
                           value="Sign in" />

                    <input type="button"
                           class="btn btn-link center-block"
                           id="ForgotPasswordButton"
                           value="Forgot Password" />
                </form>

            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        // Assign View-ViewModel to the above <div id = "Home" ...
        // $.BindingAnnotation("#Home", () => Biz.WebApp.Home.HomeView, () => Biz.WebApp.Home.HomeViewModel)

        // Since lambda description in the script tag is not supported by IE, it is declared with the old description method
        $.BindingAnnotation("#Home", function () { return Biz.WebApp.Home.HomeView; }, function () { return Biz.WebApp.Home.HomeViewModel; });
    </script>
}